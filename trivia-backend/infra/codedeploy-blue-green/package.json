{
  "name": "trivia-backend-blue-green",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "synth-infra": "cdk synth --app 'node infra-setup.js'",
    "deploy-test-infra": "tsc && cdk deploy --app 'node infra-setup.js' --require-approval never TriviaBackendTest",
    "deploy-prod-infra": "tsc && cdk deploy --app 'node infra-setup.js' --require-approval never TriviaBackendProd"
  },
  "devDependencies": {
    "@types/node": "^17.0.38",
    "typescript": "^4.6.4",
    "aws-cdk": "^2.22.0"
  },
  "dependencies": {
    "@aws-cdk/aws-certificatemanager": "^1.121.0",
    "@aws-cdk/aws-cloudwatch": "^1.121.0",
    "@aws-cdk/aws-ec2": "^1.121.0",
    "@aws-cdk/aws-elasticloadbalancingv2": "^1.121.0",
    "@aws-cdk/aws-iam": "^1.121.0",
    "@aws-cdk/aws-route53": "^1.121.0",
    "@aws-cdk/aws-route53-targets": "^1.121.0",
    "@aws-cdk/core": "^1.121.0",
    "aws-sdk": "^2.1146.0",
    "yargs": "^17.4.1"
  }
}
